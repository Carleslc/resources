{
    "manifest_version": 3,
    "name": "Recursos Carleslc",
    "version": "2.0",
    "description": "AÃ±ade un recurso a https://carleslc.me/resources",
    "homepage_url": "https://github.com/Carleslc/resources/",
    "action": {
        "default_icon": "logo.png",
        "default_title": "Recursos Carleslc",
        "default_popup": "popup.html"
    },
    "icons": {
        "64": "logo.png"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["js/lib.js", "js/content.js"]
    }],
    "permissions": [
        "activeTab",
        "clipboardWrite"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}
