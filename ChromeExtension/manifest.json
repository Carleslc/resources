{
    "manifest_version": 2,
    "name": "Recursos Carleslc",
    "version": "1.0",
    "description": "AÃ±ade un recurso a https://carleslc.me/resources",
    "homepage_url": "https://github.com/Carleslc/resources/",
    "page_action": {
        "default_icon": "logo.png",
        "default_title": "Recursos Carleslc",
        "default_popup": "popup.html"
    },
    "icons": {
        "64": "logo.png"
    },
    "background": {
        "scripts": ["js/lib.js", "js/eventPage.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["js/lib.js", "js/content.js", "js/jquery-3.3.1.slim.min.js"]
    }],
    "permissions": [
        "activeTab",
        "http://*/*",
        "https://*/*"
    ]
}